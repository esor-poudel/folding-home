<Window x:Class="User_Interface.ClientJobBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client Job Browser" Height="480" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="140"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Text="Client Job Browser"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#2D2D2D"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16"
                   Grid.Row="0"/>

        <!-- Clients List -->
        <GroupBox Header="Clients" Grid.Row="1" Margin="0,0,0,10">
            <DataGrid x:Name="ClientsDataGrid"
                      AutoGenerateColumns="False"
                      RowHeaderWidth="0"
                      AlternatingRowBackground="LightGray"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      Margin="0"
                      Height="100">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Client Name" Binding="{Binding DisplayName}" Width="*"/>
                    <DataGridTextColumn Header="Jobs Completed" Binding="{Binding JobsCompleted}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Fetch Jobs Button -->
        <Button Content="Fetch Jobs"
                Grid.Row="2"
                Height="32"
                Width="120"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"
                Click="FetchJobs_Click"/>

        <!-- Jobs and Job Details -->
        <GroupBox Header="Jobs" Grid.Row="3" Margin="0">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Jobs List -->
                <DataGrid x:Name="JobsDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          RowHeaderWidth="0"
                          AlternatingRowBackground="LightGray"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          SelectionChanged="JobsDataGrid_SelectionChanged"
                          SelectionUnit="FullRow"
                          Margin="0,0,0,8"
                          Height="100"
                          Grid.Row="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Job ID" Binding="{Binding}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Job Code -->
                <TextBlock Text="Job Code:" FontWeight="Bold" FontSize="14" Margin="0,0,0,2" Grid.Row="1"/>
                <TextBox x:Name="JobCodeTextBox"
                         Margin="0,2,0,8"
                         Height="60"
                         VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Grid.Row="2"/>

                <!-- Execute Button -->
                <Button Content="Execute Submit Result"
                        Height="32"
                        Width="180"
                        HorizontalAlignment="Left"
                        Margin="0,70,0,0"
                        Click="ExecuteJob_Click"
                        Grid.Row="2"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>