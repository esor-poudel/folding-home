<Window x:Class="User_Interface.JobSubmissionForm"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Job Submission" Height="450" Width="600"
        WindowStartupLocation="CenterScreen" Background="#f8f8f8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Job Title -->
            <RowDefinition Height="*"/>
            <!-- Python Code -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Text="Submit a Python Job"
                   FontWeight="Bold"
                   FontSize="18"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <!-- Job Title -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Enter Job Title:" Margin="0,0,0,5"/>
            <TextBox x:Name="JobTitleTextBox" Height="30"/>
        </StackPanel>

        <!-- Python Code -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Python Code:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPythonCode"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="14"
                     BorderBrush="#ccc"
                     Padding="8"
                     Background="White"
                     Height="200"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">

            <Button x:Name="btnBrowseFile"
                    Content="Browse File"
                    Width="100"
                    Height="35"
                    Background="#4C8BF5"
                    Foreground="White"
                    FontWeight="Bold"
                    Margin="10"
                    Click="btnBrowseFile_Click"/>

            <Button x:Name="btnSubmit"
                    Content="Submit Job"
                    Width="100"
                    Height="35"
                    Background="#2E7D32"
                    Foreground="White"
                    FontWeight="Bold"
                    Margin="10"
                    Click="btnSubmit_Click"/>

            <Button x:Name="btnFetchJobs"
                    Content="Fetch Jobs"
                    Width="100"
                    Height="35"
                    Background="#616161"
                    Foreground="White"
                    FontWeight="Bold"
                    Margin="10"
                    Click="btnFetchJobs_Click"/>
        </StackPanel>
    </Grid>
</Window>
